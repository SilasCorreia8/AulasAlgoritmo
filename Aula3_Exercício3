package aula3lernumerointescreverquad.raiz;

import javax.swing.JOptionPane;

public class Aula3LerNumeroIntEscreverQuadRaiz {

    public static void main(String[] args) {
        // TODO code application logic here
        
        int n1;
        double quad,raizq;
        
        String sn1;
        
        sn1=JOptionPane.showInputDialog(null, "Digite o valor: ");
        
        n1 = Integer.parseInt(sn1);
        
       quad = (double)Math.pow(n1, 2);
       raizq = (double)Math.sqrt(n1);
       
       JOptionPane.showMessageDialog(null, n1 + " ao quadrado é: "+quad+"\nE a raiz quadrada de "+n1+" é: " + raizq);
    }
    
}
