package aula3_ler2numerosintescreverrestodadiv;

import javax.swing.JOptionPane;

public class Aula3_Ler2NumerosIntEscreverRestoDaDiv {
    
    public static void main(String[] args) {
        // TODO code application logic here
        
        int n1,n2;
        double r;
        
        String sn1,sn2;
        
        sn1=JOptionPane.showInputDialog(null, "Digite o Primeiro valor:");
        sn2=JOptionPane.showInputDialog(null, "Digite o Segundo valor:");
        
        n1 = Integer.parseInt(sn1);
        n2 = Integer.parseInt(sn2);
        
        
        r = n1 % n2;
        
        JOptionPane.showMessageDialog(null, "O Resto da divisão de "+n1+" dividido por "+n2+" é: " + r);
           
    }
    
}
